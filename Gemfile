source "https://rubygems.org"

# Use the same version of Jekyll as GitHub Pages
gem "jekyll", "~> 3.9.3"

# Required for Jekyll to work with GitHub Pages
gem "github-pages", group: :jekyll_plugins

# Required for Ruby 3.0 and above
gem "webrick", "~> 1.8"

# Essential Jekyll plugins
group :jekyll_plugins do
  gem "jekyll-sitemap"
  gem "jekyll-feed"
  gem "jekyll-seo-tag"
end
